{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "noEmit": true,
    "sourceMap": true,

    "allowJs": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es5",

    "incremental": true,

    "skipLibCheck": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "cypress", ".next", "next.config.js"]
}
